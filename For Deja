<div id="summary" class="hidden">
  <h2>Your Answers:</h2>
  <ul id="answers-list"></ul>
  <button onclick="showApology()">Continue</button>
</div>

<div id="apology" class="hidden">
  <p>Hey, I just want to say I’m sorry for the silence and awkwardness. It really does feel empty when we don’t talk. I hope we can find our way back to better conversations.</p>
  
  <p>Do you forgive me?</p>
  <button onclick="forgive(true)">Yes</button>
  <button onclick="forgive(true)">Yes</button>
  <br />
  <button class="small-no" onclick="forgive(false)">No</button>
</div>

<script>
  const answers = {};

  function selectAnswer(questionNum, answerText) {
    answers[questionNum] = answerText;
    document.getElementById('question-' + questionNum).classList.add('hidden');
    const nextNum = questionNum + 1;
    if(document.getElementById('question-' + nextNum)) {
      document.getElementById('question-' + nextNum).classList.remove('hidden');
    } else {
      showSummary();
    }
  }

  function showSummary() {
    document.getElementById('quiz-container').classList.add('hidden');
    const list = document.getElementById('answers-list');
    list.innerHTML = '';
    for(let i=1; i<=6; i++) {
      const li = document.createElement('li');
      li.textContent = `Q${i}: ${answers[i]}`;
      list.appendChild(li);
    }
    document.getElementById('summary').classList.remove('hidden');
  }

  function showApology() {
    document.getElementById('summary').classList.add('hidden');
    document.getElementById('apology').classList.remove('hidden');
  }

  function forgive(isForgiven) {
    if(!isForgiven) {
      alert("I understand and I will leave you alone.");
    }
    document.body.innerHTML = '<h1>I love you no matter what, and I really do love you Deja.<br> I\'m sorry for not reaching out sooner.</h1>';
  }
</script>

</body>
